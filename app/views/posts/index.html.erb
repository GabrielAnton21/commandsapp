
<p id="notice"><%= notice %></p>
<br><br><br><br>
<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Heading</th>
      <th>Subheading</th>
      <th>Text</th>
      <th>Link</th>
      <th>Image Link</th>
      <th>Button Text</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.heading %></td>
        <td><%= post.subheading %></td>
        <td><%= post.text %></td>
        <td><%= post.link %></td>
        <td><%= post.imagelink %></td>
        <td><%= post.buttontext %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <%# <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

